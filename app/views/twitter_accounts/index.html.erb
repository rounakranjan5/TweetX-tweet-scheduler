
<div class="d-flex align-items-center justify-content-between">

<h1>Twitter Accounts</h1>


<%= button_to "Connect a Twitter Account" ,"/auth/twitter", method: :post,class:"btn btn-primary" %>

</div>

<% @twitter_accounts.each do |twitter_account| %>
   

<br>

<div class="parent" style="margin-top:1rem;display:flex;gap:2rem;border:1px solid #ccc;padding:1rem;">

<div>
<img src="<%= twitter_account.image %>" class="card-img-top" alt="profile image" style="border-radius:50%;width:5rem;height:5rem;">
</div>

<div style="display:flex;justify-content:space-between;width:100%;">

    <div >
    <h3><%= twitter_account.name %></h3>
    <%= link_to "@#{twitter_account.username}", "https://x.com/#{twitter_account.username}" ,target: :_blank ,style: "text-decoration:none;" %>
    </div>

    <div>
    <%= button_to "Disconnect",twitter_account,method: :delete, class: "btn btn-danger mt-2" %>
    </div>
</div>

</div>
<% end %>